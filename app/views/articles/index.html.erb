<%= link_to "New Article", new_article_path, class: 'button' %>

<% @articles.each do |article| %>
  <div class="article-item">
    <h3><%= link_to article.name, show_article_path(article.id) %></h3>
    <p><%= article.body %></p>
    <%= link_to 'Edit', edit_article_path(article.id) %>
  </div>
<% end %>